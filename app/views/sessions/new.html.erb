<% provide(:title, "Log in") %>
<br>
<br>
<br>
<br>
<br>
<br>
<h2 class="centered section-heading">Log in</h2>

<br>
<div class="w-container">
  <div class="col-md-6 col-md-offset-3 form-wrapper w-form">
    <%= form_for(:session, url: login_path ) do |f| %>

      <%= f.email_field :email, placeholder: "Email", class: 'form-field w-input ' %>

      <%= f.password_field :password, placeholder: "Password", class: 'form-field w-input' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in", class: "button full-width w-button" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now", signup_path %> or <%= link_to "log in with Linkedin", '/auth/linkedin' %></p>
  </div>
</div>
