
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :profession, "Job Title" %>
      <%= f.text_field :profession, class: 'form-control' %><br>

      <%= f.label :company %>
      <%= f.text_field :company, class: 'form-control' %><br>

      <%= f.label :description, "Describe Yourself" %>
      <%= f.text_field :description, class: 'form-control' %><br>

      <%= f.label :linkedin_url, "LinkedIn URL" %>
      <%= f.text_field :linkedin_url, class: 'form-control' %><br>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user if @user.email %>
      <a href="http://gravatar.com/emails" target=_blank>change</a>
    </div>
  </div>
</div>