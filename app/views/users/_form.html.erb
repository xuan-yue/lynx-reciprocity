
<div class="w-container">
  <div class="col-md-6 col-md-offset-3 form-wrapper w-form">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.text_field :firstName, placeholder: "First Name", class: 'form-control' %><br>

      <%= f.text_field :lastName, placeholder: "Last Name", class: 'form-control' %><br>

      <%= f.email_field :email, placeholder: "Email", class: 'form-control' %><br>

      <%= f.password_field :password, placeholder: "Password", class: 'form-control' %><br>

      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: 'form-control' %><br>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>