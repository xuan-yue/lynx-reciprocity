
<div class="w-container">
  <div class="col-md-6 col-md-offset-3 form-wrapper w-form">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.text_field :firstName, placeholder: "First Name", class: 'form-field w-input' %><br>

      <%= f.text_field :lastName, placeholder: "Last Name", class: 'form-field w-input' %><br>

      <%= f.email_field :email, placeholder: "Email", class: 'form-field w-input' %><br>

      <%= f.password_field :password, placeholder: "Password", class: 'form-field w-input' %><br>

      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: 'form-field w-input' %><br>

      <%= f.submit "Save changes", class: "button full-width w-button" %>
      <p>Have an account? <%= link_to "Go to the login page", login_path %>  or <%= link_to "log in with Linkedin", '/auth/linkedin' %>  or <%= link_to "log in with Facebook", '/auth/facebook' %> or <%= link_to "log in with Google", '/auth/google_oauth2' %></p>
    <% end %>
  </div>
</div>
